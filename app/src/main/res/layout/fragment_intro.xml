<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/my_image" />

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Застосунок 'MyFirstApp' допомагає знайти та використовувати електрозаправні станції для електромобілів у місті Запоріжжя. Зручна карта з відміченими станціями дозволяє легко знаходити оптимальний шлях. Просто натискайте на маркери, щоб отримати інформацію про кожну станцію. Зробіть свій шлях більш екологічно чистим з нашим застосунком!"
        android:textSize="16sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Start"
        android:onClick="onStartButtonClick" />

</RelativeLayout>
